{
    "manifest_version": 2,
    "name": "__MSG_APP_NAME__",
    "description": "__MSG_APP_DESCRIPTION__",
    "version": "0.0.0",
    "default_locale": "ko",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "48": "img/icon48.png"
        }
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search?q=*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "<all_urls>",
        "storage",
        "tabs"
    ]
}